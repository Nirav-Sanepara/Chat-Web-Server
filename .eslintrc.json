{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-unused-vars": ["error", { "args": "none" }],
    "prefer-const": "error", // Enforce usage of const when variables are not reassigned
    "no-var": "error",

    "space-infix-ops": "error",

    "no-undef": "error",
    "no-unreachable": "error",
    "valid-typeof": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error"
  }
}
